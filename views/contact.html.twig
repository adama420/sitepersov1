{% extends "base.html.twig" %}

{% block contenu %}
<div class="container-fluid bgContact">
    <div class="card py-5 col-10 offset-1 col-md-8 offset-md-2 bgZero">

        
        <h2 class="h1-responsive ogCustom font-weight-bold text-center py-4">Contactez nous ! (;</h2>
        <p class="text-center font-weight-bolder text-white w-responsive mx-auto mb-5">Si vous avez un projet digital, n'hésitez pas à nous contacter pour en discuter. Nous serons ravis de vous répondre !</p>
    
        <div class="row">
    
            <!--Grid column-->
            <div class="col-12 col-md-8 offset-md-2 offset-0 py-3">
                <form id="contact-form" name="contact-form" action="" method="POST">
    
                    <!--Grid row-->
                    <div class="row py-3">
    
                        <!--Grid column-->
                        <div class="col-md-6 col-12">
                            <div class="mb-0">
                                <input type="text" id="name" name="name" class="form-control">
                                <label class="text-white" for="name" class="">Votre nom</label>
                            </div>
                        </div>
                        <!--Grid column-->
    
                        <!--Grid column-->
                        <div class="col-md-6 col-12">
                            <div class="mb-0">
                                <input type="text" id="email" name="email" class="form-control">
                                <label class="text-white" for="email" class="">Votre email</label>
                            </div>
                        </div>
                        <!--Grid column-->
    
                    </div>
                    <!--Grid row-->
    
                    <!--Grid row-->
                    <div class="row py-3">
                        <div class="col-12">
                            <div class="mb-0">
                                <input type="text" id="subject" name="subject" class="form-control">
                                <label class="text-white" for="subject" class="">Sujet</label>
                            </div>
                        </div>
                    </div>
                    <!--Grid row-->
    
                    <!--Grid row-->
                    <div class="row py-3">
    
                        <!--Grid column-->
                        <div class="col-12">
    
                            <div>
                                <textarea type="text" id="message" name="message" rows="2" class="form-control md-textarea"></textarea>
                                <label class="text-white" for="message">Votre message</label>
                            </div>
    
                        </div>
                    </div>
                    <!--Grid row-->
    
                </form>
    
                <div class="col mx-auto">
                    <div class="text-center">
                        <a class="btn btn-primary" onclick="document.getElementById('contact-form').submit();">Envoyer</a>
                    </div>
                    <div class="status"></div>
                </div>
            </div>
            <!--Grid column-->
    
        
    
        </div>
    
    </div>
</div>

{% endblock %}